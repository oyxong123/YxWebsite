@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace YxWebsite.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!--
    Hi, I like my website a lot. ;D
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="YxWebsite.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

    <!--Add mudblazor theming reference-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <!--Add radzen theming reference-->
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/default.css">
    <!--Add Blazorise theming reference-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Uh oh, what you did. An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            You messed up :p. An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Hope for the best</a>
        <a class="dismiss">🗙</a>
    </div>

    <!--Adds javascript files of blazor-->
    <script src="_framework/blazor.server.js"></script>
    <!--Adds javascript files of MudBlazor-->
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <!--Adds javascript files of Radzen-->
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
</body>
</html>
