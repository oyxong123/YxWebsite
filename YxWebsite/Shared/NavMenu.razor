      {
        new(new CustomNavMenu.Link("oi oi-list-rich", "Home", "home")),
        new(new CustomNavMenu.Link("", "Spaces"), new List<CustomNavMenu.Link> { 
            new("oi oi-list-rich", "Music Square", "musicsquare"),
